generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
   provider = "nexus-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum AuthType {
  EMAIL
  SSO
  TOKEN
}

model User {
  id      String   @id @default(uuid())
  name    String
  avatar  String?
  email   String?  @unique
  role    Role     @default(USER)
  // posts   Post[]
  profile Profile?
  tokens  RefreshToken[]
  auths   UserAuth[]
}

model RefreshToken {
  id         Int       @id @default(autoincrement())
  label      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  hash       String
  valid      Boolean   @default(true)
  expiration DateTime
 
  // Relation fields
  userId String
  user   User @relation(fields: [userId], references: [id])
}


model UserAuth {
  userId    String @id
  user      User @relation(fields: [userId], references: [id])
  authType  AuthType
}
